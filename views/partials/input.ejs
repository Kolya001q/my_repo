<div class="space-y-4">
  <div>
    <label for="rank" class="block text-sm font-medium text-gray-300">Звання:</label>
    <input type="text" id="rank" name="rank" required
           class="mt-1 block w-full px-3 py-2 border border-gray-600 rounded-md shadow-sm bg-gray-700 text-gray-200 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
  </div>
  <div>
    <label for="name" class="block text-sm font-medium text-gray-300">Ім'я:</label>
    <input type="text" id="name" name="name" required
           class="mt-1 block w-full px-3 py-2 border border-gray-600 rounded-md shadow-sm bg-gray-700 text-gray-200 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
  </div>
  <div>
    <label for="lastName" class="block text-sm font-medium text-gray-300">Прізвище:</label>
    <input type="text" id="lastName" name="lastName" required
           class="mt-1 block w-full px-3 py-2 border border-gray-600 rounded-md shadow-sm bg-gray-700 text-gray-200 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
  </div>
  <div>
    <label for="assaultRifle" class="block text-sm font-medium text-gray-300">Гвинтівка:</label>
    <select name="assaultRifle" id="assaultRifle" class="mt-1 block w-full px-3 py-2 border border-gray-600 rounded-md shadow-sm bg-gray-700 text-gray-200 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
      <option value="AK-47">AK-47</option>
      <option value="AK-74">AK-74</option>
      <option value="AKC">AKC</option>
      <option value="CBД">CBД</option>
    </select>
  </div>
  <div>
    <label for="serialNumberAssaultRifle" class="block text-sm font-medium text-gray-300">Номер гвинтівки:</label>
    <input type="text" id="serialNumberAssaultRifle" name="serialNumberAssaultRifle" required
           class="mt-1 block w-full px-3 py-2 border border-gray-600 rounded-md shadow-sm bg-gray-700 text-gray-200 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
  </div>
  <div>
    <label for="pistol" class="block text-sm font-medium text-gray-300">Пістолет:</label>
    <select name="pistol" id="pistol" class="mt-1 block w-full px-3 py-2 border border-gray-600 rounded-md shadow-sm bg-gray-700 text-gray-200 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
      <option value="ПМ">ПМ</option>
      <option value="ТТ">ТТ</option>
    </select>
  </div>
  <div>
    <label for="serialNumberPistol" class="block text-sm font-medium text-gray-300">Номер пістолету:</label>
    <input type="text" id="serialNumberPistol" name="serialNumberPistol" required
           class="mt-1 block w-full px-3 py-2 border border-gray-600 rounded-md shadow-sm bg-gray-700 text-gray-200 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
  </div>
</div>
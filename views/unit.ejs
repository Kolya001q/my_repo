<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head'); %>
<body class="bg-gray-900 min-h-screen flex flex-col relative">
  <!-- Particle Background -->
  <div id="particles-js" class="fixed inset-0 z-0"></div>
  <!-- Main Content -->
  <div class="flex-grow container mx-auto px-4 py-8 z-10">
    <div class="bg-gray-800/80 shadow-lg rounded-lg p-6">
      <div class="flex justify-between items-center mb-8">
        <a href="/api/collections" class="inline-block px-6 py-2 border-2 border-gray-600 text-gray-200 rounded-full hover:bg-gray-600 hover:text-white transition">Повернутися назад</a>
        
      </div>
      <h1 class="text-3xl font-bold text-center mb-8 text-gray-200">Облік зброї в підрозділі: <%= title.toUpperCase() %></h1>
      <div class="flex flex-col md:flex-row gap-6">
        <div class="flex-1 overflow-x-auto">
          <table class="w-full border-2 border-gray-600 rounded-lg">
            <thead class="bg-gray-800">
              <tr>
                <th class="px-4 py-2 text-left text-gray-300">Звання</th>
                <th class="px-4 py-2 text-left text-gray-300">Ім'я</th>
                <th class="px-4 py-2 text-left text-gray-300">Прізвище</th>
                <th class="px-4 py-2 text-left text-gray-300">Гвинтівка</th>
                <th class="px-4 py-2 text-left text-gray-300">Номер гвинтівки</th>
                <th class="px-4 py-2 text-left text-gray-300">Пістолет</th>
                <th class="px-4 py-2 text-left text-gray-300">Номер пістолету</th>
                <th class="px-4 py-2 text-left text-gray-300">Дії</th>
              </tr>
            </thead>
            <tbody>
              <% for (const document of documents) { %>
                <tr class="border-t border-gray-700">
                  <td class="px-4 py-2 text-gray-400"><%= document.rank %></td>
                  <td class="px-4 py-2 text-gray-400"><%= document.name %></td>
                  <td class="px-4 py-2 text-gray-400"><%= document.lastName %></td>
                  <td class="px-4 py-2 text-gray-400"><%= document.assaultRifle %></td>
                  <td class="px-4 py-2 text-gray-400"><%= document.serialNumberAssaultRifle %></td>
                  <td class="px-4 py-2 text-gray-400"><%= document.pistol %></td>
                  <td class="px-4 py-2 text-gray-400"><%= document.serialNumberPistol %></td>
                  <td class="px-4 py-2">
                    <span class="edit-trigger cursor-pointer text-blue-400 hover:text-blue-300 mr-2" data-document-id="<%= document._id %>">Редагувати</span>
                    <span class="delete-trigger cursor-pointer text-red-400 hover:text-red-300" data-document-id="<%= document._id %>">Видалити</span>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <div class="md:w-1/4">
        <button id="openModal" class=" w-full text-2xl bg-green-400 hover:bg-green-300 py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 mb-2">Додати нову зброю</button>

          <form action="/api/collections/<%= title %>/export" method="GET">
            <button class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">Зберегти у xlsx</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div id="addDocumentModal" class="fixed inset-0 bg-gray-900 bg-opacity-75 flex items-center justify-center hidden z-20">
    <div class="bg-gray-800 rounded-lg p-6 w-full max-w-md">
      <h2 class="text-2xl font-bold text-gray-200 mb-4">Додати новий запис</h2>
      <form action="/api/collections/<%= title %>/add" method="POST">
        <%- include('./partials/input'); %>
        <div class="flex justify-end mt-4">
          <button type="button" id="closeModal" class="mr-2 px-4 py-2 bg-gray-600 text-gray-200 rounded-md hover:bg-gray-700">Скасувати</button>
          <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">Додати запис</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Footer -->
  <footer class="w-full py-4 border-t-2 border-gray-600 text-center bg-gray-800 z-10">
    <h4 class="text-lg font-semibold text-gray-200">©Всі права захищені</h4>
    <p class="text-gray-400 mt-2">Розробник:  сержант Дрига М.В.</p>
  </footer>

  <!-- Particles.js Script and Configuration -->
  <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
  <script>
    particlesJS('particles-js', {
      particles: {
        number: { value: 80, density: { enable: true, value_area: 800 } },
        color: { value: ['#00f0ff', '#00ff88', '#ffffff'] },
        shape: { type: 'circle', stroke: { width: 0, color: '#000000' } },
        opacity: { value: 0.5, random: true, anim: { enable: true, speed: 1, opacity_min: 0.1, sync: false } },
        size: { value: 3, random: true, anim: { enable: true, speed: 2, size_min: 0.1, sync: false } },
        line_linked: { enable: false },
        move: {
          enable: true,
          speed: 2,
          direction: 'none',
          random: true,
          straight: false,
          out_mode: 'out',
          bounce: false,
          attract: { enable: false, rotateX: 600, rotateY: 1200 }
        }
      },
      interactivity: {
        detect_on: 'canvas',
        events: { onhover: { enable: false }, onclick: { enable: false }, resize: true },
        modes: { grab: { distance: 400, line_linked: { opacity: 1 } }, bubble: { distance: 400, size: 40, duration: 2, opacity: 8, speed: 3 }, repulse: { distance: 200, duration: 0.4 }, push: { particles_nb: 4 }, remove: { particles_nb: 2 } }
      },
      retina_detect: true
    });
  </script>

  <script>
    const openModalBtn = document.getElementById('openModal');
    const closeModalBtn = document.getElementById('closeModal');
    const modal = document.getElementById('addDocumentModal');

    openModalBtn.addEventListener('click', () => {
      modal.classList.remove('hidden');
    });

    closeModalBtn.addEventListener('click', () => {
      modal.classList.add('hidden');
    });

    const deleteTriggers = document.querySelectorAll('.delete-trigger');
    const editTriggers = document.querySelectorAll('.edit-trigger');
    
    deleteTriggers.forEach(trigger => {
      trigger.addEventListener('click', (event) => {
        const documentId = event.target.dataset.documentId;
        const collectionName = '<%= title %>';
    
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/api/collections/${collectionName}/delete`;
    
        const hiddenInput = document.createElement('input');
        hiddenInput.type = 'hidden';
        hiddenInput.name = 'id';
        hiddenInput.value = documentId;
        form.appendChild(hiddenInput);
    
        document.body.appendChild(form);
        form.submit();
        document.body.removeChild(form);
      });
    });      

    editTriggers.forEach(trigger => {
      trigger.addEventListener('click', (event) => {
        const documentId = event.target.dataset.documentId;
        const collectionName = '<%= title %>';
        window.location.href = `/api/collections/${collectionName}/edit?id=${documentId}`;
      });
    });
  </script>
</body>
</html>